        <!-- Post-->
        <div class="row d-flex align-items-stretch">
          <div class="text col-lg-7">
            <div class="text-inner d-flex align-items-center">
              <div class="content">
                <header class="post-header">
                  <div class="category">{{tags}}
                  </div>
                  <a href="{{url}}">
                    <h2 class="h4">{{title}}</h2></a>
                </header>
                <p>{{excerpt words="40"}}</p>
                <footer class="post-footer d-flex align-items-center"><a href="#" class="author d-flex align-items-center flex-wrap">
                    <div class="avatar"><img src="{{author.profile_image}}" alt="Profile Image" class="img-fluid"></div>
                    <div class="title"><span>{{author}}</span></div></a>
                  <div class="date"><i class="icon-clock"></i>{{date}}</div>
                </footer>
              </div>
            </div>
          </div>
          <div class="col-lg-5">
           <div class="image">
                <img src="{{feature_image}}" alt="{{title}}">
           </div>      
            </div>
        </div>